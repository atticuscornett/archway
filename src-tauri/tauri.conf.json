{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "archway",
  "version": "0.1.0",
  "identifier": "io.atticusc.archway",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5454",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Archway",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self'",
        "style-src": "'self'",
        "img-src": "'self'",
        "font-src": "'self'",
        "connect-src": "'self'"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
